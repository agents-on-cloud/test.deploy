pipeline {
    stages {
        stage('Build') {
            steps {
                echo("I am in build")
                sshPublisher(
                    continueOnError: false, failOnError: true,
                    publishers: [
                    sshPublisherDesc(
                        configName: "saleh-test",
                        verbose: true,
                        transfers: [
                        sshTransfer(
                            execCommand: " rm -rf /var/www/api.ciam.agentsoncloud.com_Release_4"
                        ),
                        sshTransfer(
                            sourceFiles: "**/*",
                            remoteDirectory: "api.ciam.agentsoncloud.com_Release_4",
                            execCommand:"cd /var/www/api.ciam.agentsoncloud.com_Release_4 && sudo npm i"
                           
                        ),
                    ])
                ])
            }
        }
        stage('Test') {
            steps {
                echo("I am in Test")
            }
        }
        stage('Deploy') {
            steps {
                echo("I am in Deploy")
                sshPublisher(
                    continueOnError: false, failOnError: true,
                    publishers: [
                    sshPublisherDesc(
                        configName: "saleh-test",
                        verbose: true,
                        transfers: [
                         sshTransfer(
                                 execCommand: "cd /var/www/api.ciam.agentsoncloud.com_Release_4 && pm2 start"
                         )
                     
                    ])
                ])
            }
        }
    }
}
